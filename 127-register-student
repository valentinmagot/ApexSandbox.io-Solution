public String registerStudent(String name, String phone, String email) {
    
    apxio__Student__c newStudent = apxio__Studend__c();

    newStudent.Name = name;
    newStudent.apxio__Phone__c = phone;
    newStudent.apxio__Email__c = email;

    instert newStudent;

    apxio__Student__C rec = [
        SELECT Id, apxio__Registration_Number__c as regNumber
        FROM apxio__Student__c
        WHERE Id := rec.Id;
    ]

    return rec.regNumber;
}